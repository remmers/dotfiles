{
  // Dotfiles settings
  // -> for these to take effect in VSCode containers (automatic setup of dotfiles),
  //    these settings must be part of the user settings (not remote settings)
  "dotfiles.repository": "https://github.com/remmers/dotfiles.git",
  "dotfiles.targetPath": "~/dotfiles",
  "dotfiles.installCommand": "setup.sh",

  // General settings
  "telemetry.telemetryLevel": "off", // Disable telemetry

  "window.zoomLevel": 1,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.detectIndentation": false,
  "debug.allowBreakpointsEverywhere": true,

  "files.watcherExclude": {
    "**/target/**": true
  },

  // Github Copilot settings
  "github.copilot.enable": {
    // "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "github.copilot.editor.enableAutoCompletions": true,

  //  Rust Analyzer settings
  "rust-analyzer.lens.run.enable": false,
  "rust-analyzer.lens.debug.enable": true,
  "rust-analyzer.cargo.sysroot": "discover",
  "rust-analyzer.lens.implementations.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  
  // CMake settings
  "files.insertFinalNewline": true,
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],

  // Svelte settings
  "svelte.enable-ts-plugin": true
}
